<?xml version="1.0" encoding="utf-8"?>
<androidx.constraintlayout.widget.ConstraintLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent">


    <!-- Example 1 = Audio Player -->
    <TextView
        style="@style/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="10dp"
        android:text="Example - Gravity Sensor"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintStart_toStartOf="parent" />

    <TextView
        android:id="@+id/week13_textview1"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="Gravity Values"
        android:textSize="34sp"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toTopOf="parent"
        app:layout_constraintBottom_toTopOf="@id/week13_textview2"
        app:layout_constraintVertical_bias="0.76"/>

    <TextView
        android:id="@+id/week13_textview2"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:text="NO RETURN"
        android:textSize="24sp"
        app:layout_constraintBottom_toBottomOf="parent"
        app:layout_constraintEnd_toEndOf="parent"
        app:layout_constraintStart_toStartOf="parent"
        android:layout_marginBottom="476dp"/>


    <View
        android:id="@+id/line"
        android:layout_width="match_parent"
        android:layout_height="5dp"
        android:layout_marginVertical="30dp"
        android:background="@color/light_gray"
        app:layout_constraintTop_toBottomOf="@id/week13_textview2" />

    <!-- Example 2 =All sensor -->
    <TextView
        android:id="@+id/week13_exam2_title"
        style="@style/tv_title"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_marginHorizontal="10dp"
        android:layout_marginVertical="30dp"
        android:text="Example - All sensor"
        app:layout_constraintStart_toStartOf="parent"
        app:layout_constraintTop_toBottomOf="@id/line" />

    <ScrollView
        android:layout_width="match_parent"
        android:layout_height="0dp"
        android:layout_marginTop="20dp"
        app:layout_constraintTop_toBottomOf="@id/week13_exam2_title"
        app:layout_constraintBottom_toBottomOf="parent">

        <TextView
            android:id="@+id/week13_result"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="8pt"
            app:layout_constraintTop_toBottomOf="@+id/week13_exam2_title"
            />
    </ScrollView>

</androidx.constraintlayout.widget.ConstraintLayout>